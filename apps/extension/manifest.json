{
  "manifest_version": 3,
  "name": "Trenchable",
  "version": "0.1.0",
  "description": "Instant Solana memecoin safety scanner â€” scan before you ape",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://axiom.trade/*",
    "https://pump.fun/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://axiom.trade/meme/*", "https://axiom.trade/t/*"],
      "js": ["content/axiom.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://pump.fun/*"],
      "js": ["content/pumpfun.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
