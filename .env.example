# Solana RPC Configuration
# Primary RPC (Helius, QuickNode, etc.) - leave empty to use public RPC only
SOLANA_RPC_PRIMARY=
# Fallback RPC (public, rate-limited)
SOLANA_RPC_FALLBACK=https://api.mainnet-beta.solana.com
# WebSocket RPC endpoint (defaults to wss:// version of primary RPC)
SOLANA_WS_ENDPOINT=

# Server Configuration
API_PORT=3001
API_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173

# Cache
SCAN_CACHE_TTL_MS=60000
INSTANT_CACHE_TTL_MS=30000

# Jupiter API
JUPITER_API_URL=https://quote-api.jup.ag/v6

# API Authentication (comma-separated keys, leave empty for dev/no auth)
API_KEYS=

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_INSTANT_PER_HOUR=50
RATE_LIMIT_DEEP_PER_HOUR=10

# Logging
LOG_LEVEL=info
