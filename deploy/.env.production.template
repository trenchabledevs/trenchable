# ============================================================
# Trenchable API — Production Environment
# Copy this to .env in /opt/trenchable/ and fill in values
# ============================================================

# --- Solana RPC (Helius) ---
# Get your key from https://dev.helius.xyz
SOLANA_RPC_PRIMARY=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY_HERE
SOLANA_RPC_FALLBACK=https://api.mainnet-beta.solana.com
SOLANA_WS_ENDPOINT=wss://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY_HERE

# --- Server ---
API_PORT=3001
API_HOST=0.0.0.0
# Your domain or IP — used for CORS
CORS_ORIGIN=https://YOUR_DOMAIN_HERE

# --- Auth ---
# Comma-separated list of valid API keys for the Chrome extension
# Generate with: openssl rand -hex 32
API_KEYS=REPLACE_WITH_A_RANDOM_32_CHAR_HEX_KEY

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_INSTANT_PER_HOUR=50
RATE_LIMIT_DEEP_PER_HOUR=10

# --- Cache ---
SCAN_CACHE_TTL_MS=60000
INSTANT_CACHE_TTL_MS=30000

# --- Jupiter ---
JUPITER_API_URL=https://quote-api.jup.ag/v6

# --- Logging ---
# Options: fatal, error, warn, info, debug, trace
LOG_LEVEL=info
